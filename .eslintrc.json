{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:perfectionist/recommended-natural"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "perfectionist"
    ],
    "rules": {
        "perfectionist/sort-objects": [
            "error",
            {
                "type": "natural",
                "order": "asc"
            }
        ],
        "semi": [2, "always"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
